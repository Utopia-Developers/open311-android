<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/layout_margin_small"
    android:paddingBottom="@dimen/layout_margin_small" >

    <TextView
        android:id="@+id/textViewTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="@dimen/layout_margin_small"
        android:layout_marginRight="@dimen/layout_margin_small"       
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/text_colour_report_heading" />

    <TextView
        android:id="@+id/textViewDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textViewTitle"
        android:layout_below="@+id/textViewTitle"
        android:layout_marginRight="@dimen/layout_margin_small"
        android:textColor="@color/text_colour_report" />

    <TextView
        android:id="@+id/textViewAgency"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textViewDescription"
        android:layout_below="@+id/textViewDescription"
        android:layout_marginRight="@dimen/layout_margin"
        android:layout_marginTop="@dimen/layout_margin_small"
        android:textColor="@color/text_colour_report" />

    <TextView
        android:id="@+id/textViewDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textViewAgency"
        android:layout_below="@+id/textViewAgency"
        android:layout_marginRight="@dimen/layout_margin_small"
        android:layout_marginTop="@dimen/layout_margin_small"
        android:textColor="@color/text_colour_report" />

    <TextView
        android:id="@+id/textViewAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textViewDate"
        android:layout_below="@+id/textViewDate"
        android:layout_marginRight="@dimen/layout_margin_small"
        android:layout_marginTop="@dimen/layout_margin_small"
        
        android:textColor="@color/text_colour_report" />

</RelativeLayout>